---
import BlogTag, { ColorTags } from "./BlogTag.astro";
import Section from "./Section.astro";
import { getLangFromUrl, useTranslations } from '../i18n/utils';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<Section>
    <h2 class="text-2xl">{t('projects.title')}</h2>
    <ul class="mt-4 space-y-4">
      <li class="flex flex-wrap items-center gap-2">
        <p><a href="https://github.com/vinsg/edit-owners" class="font-mono inline line-clamp-1 underline hover:decoration-purple-500 hover:underline-offset-2">Edit-owners:</a>&#8194; {t('projects.editOwners.description')}</p>
        <BlogTag text="Kotlin" color={ColorTags.PURPLE} />
        <BlogTag text="Dev Tool" color={ColorTags.STONE} />
      </li>
      <li class="flex flex-wrap items-center gap-2">
        <p><a href="https://github.com/vinsg/vinsg.ca" class="font-mono inline line-clamp-1 underline hover:decoration-purple-500 hover:underline-offset-2">Vinsg.ca:</a>&#8194; {t('projects.website.description')}</p>
        <BlogTag text="Typescript" color={ColorTags.CYAN} />
        <BlogTag text="Astro.js" color={ColorTags.RED} />
      </li>
    </ul>
</Section>
