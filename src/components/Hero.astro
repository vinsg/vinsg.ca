---
import Section from "../components/Section.astro";
import SocialBtn from "./SocialBtn.astro";
import { getLangFromUrl, useTranslations } from '../i18n/utils';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<Section>
    <div
            class="flex flex-col items-center md:flex-row md:justify-between md:gap-x-12 lg:gap-x-24 max-w-2xl"
    >
        <div>
            <h1 class="text-2xl font-bold">
                <Fragment set:html={t('hero.greeting')} />
            </h1>
            <p class="mt-6 text-l leading-7" set:html={t('hero.intro')} />
            <p class="mt-6 text-l leading-7">
                {t('hero.location')}
            </p>
            <p class="mt-6 text-l leading-7">
                {t('hero.contact')} <a class="hover:underline hover:text-purple-400" href="https://x.com/vinsg_">X</a>
            </p>
        </div>
    </div>
</Section>